// VS Code task to generate a Debug Kithare build
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Kithare Debug Build",
            "command": "python3 build.py debug",
            "windows": {
                "command": "py -3 build.py debug"
            },
            "type": "shell",
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Kithare Release Build",
            "command": "python3 build.py",
            "windows": {
                "command": "py -3 build.py"
            },
            "type": "shell",
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "Kithare Unit Tests",
            "command": "python3 build.py test",
            "windows": {
                "command": "python build.py test"
            },
            "type": "shell",
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "test"
        }
    ]
}